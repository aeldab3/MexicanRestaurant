@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["MetaDescription"] = "Create a new account to enjoy our delicious Mexican food and manage your orders easily.";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-4 shadow-lg rounded bg-white">
                <h2 class="text-center text-success fw-bold mb-4">Create a new account</h2>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Input.FirstName" class="form-label fw-bold"></label>
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Ahmed" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Input.LastName" class="form-label fw-bold"></label>
                        <input asp-for="Input.LastName" class="form-control" placeholder="Eldab3" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Date of Birth</label>
                    <div class="d-flex gap-2">
                        <select asp-for="Input.Day" class="form-select">
                            <option value="">Day</option>
                            @for (int day = 1; day <= 31; day++)
                            {
                                <option value="@day">@day</option>
                            }
                        </select>

                        <select asp-for="Input.Month" class="form-select">
                            <option value="">Month</option>
                            @{
                                var months = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames;
                                for (int i = 0; i < 12; i++)
                                {
                                    <option value="@(i + 1)">@(months[i])</option>
                                }
                            }
                        </select>

                        <select asp-for="Input.Year" class="form-select">
                            <option value="">Year</option>
                            @{
                                for (int y = DateTime.Now.Year; y >= 1900; y--)
                                {
                                    <option value="@y">@y</option>
                                }
                            }
                        </select>
                    </div>
                    <span asp-validation-for="Input.Day" class="text-danger"></span>
                    <span asp-validation-for="Input.Month" class="text-danger"></span>
                    <span asp-validation-for="Input.Year" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Gender</label>
                    <div class="d-flex gap-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Input.Gender" value="Male" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Input.Gender" value="Female" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-bold"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="eldab3@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-bold">Password</label>
                    <div class="position-relative">
                        <input asp-for="Input.Password" class="form-control pe-5" id="passwordInput" type="password" placeholder="password" />
                        <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="togglePassword('passwordInput', this)"></i>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-bold"></label>
                    <div class="position-relative">
                        <input asp-for="Input.ConfirmPassword" class="form-control pe-5" id="confirmPasswordInput" type="password" placeholder="Confirm new password" />
                        <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="togglePassword('confirmPasswordInput', this)"></i>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, icon) {
            const input = document.getElementById(inputId);
            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        }
    </script>
}
