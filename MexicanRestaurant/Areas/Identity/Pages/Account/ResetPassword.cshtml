@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="shadow-lg p-4 rounded bg-light">
                <h2 class="text-center text-success mb-4">@ViewData["Title"]</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <input asp-for="Input.Code" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label asp-for="Input.Password" class="form-label fw-bold">New Password</label>
                        <div class="position-relative">
                            <input asp-for="Input.Password" class="form-control pe-5" id="resetPasswordInput" type="password" placeholder="Enter new password" />
                            <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="toggleResetPassword('resetPasswordInput', this)"></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                        <div class="position-relative">
                            <input asp-for="Input.ConfirmPassword" class="form-control pe-5" id="confirmResetPasswordInput" type="password" placeholder="Confirm new password" />
                            <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="toggleResetPassword('confirmResetPasswordInput', this)"></i>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-success btn-lg">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleResetPassword(inputId, icon) {
            const input = document.getElementById(inputId);
            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        }
    </script>
}
