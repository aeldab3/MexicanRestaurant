@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-factor authentication (2FA)";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white fs-5 fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <partial name="_StatusMessage" for="StatusMessage" />

            @{
                var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
                if (consentFeature?.CanTrack ?? true)
                {
                    if (Model.Is2faEnabled)
                    {
                        if (Model.RecoveryCodesLeft == 0)
                        {
                            <div class="alert alert-danger">
                                <strong>No recovery codes left.</strong>
                                <p><a asp-page="./GenerateRecoveryCodes">Generate new recovery codes</a>.</p>
                            </div>
                        }
                        else if (Model.RecoveryCodesLeft == 1)
                        {
                            <div class="alert alert-danger">
                                <strong>1 recovery code left.</strong>
                                <p><a asp-page="./GenerateRecoveryCodes">Generate new recovery codes</a>.</p>
                            </div>
                        }
                        else if (Model.RecoveryCodesLeft <= 3)
                        {
                            <div class="alert alert-warning">
                                <strong>@Model.RecoveryCodesLeft recovery codes left.</strong>
                                <p><a asp-page="./GenerateRecoveryCodes">Generate new recovery codes</a>.</p>
                            </div>
                        }

                        if (Model.IsMachineRemembered)
                        {
                            <form method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger me-2">Forget browser</button>
                            </form>
                        }
                        <a asp-page="./Disable2fa" class="btn btn-outline-warning me-2">Disable 2FA</a>
                        <a asp-page="./GenerateRecoveryCodes" class="btn btn-outline-primary">Reset codes</a>
                    }

                    <hr />
                    <h5 class="fw-bold">Authenticator App</h5>
                    @if (!Model.HasAuthenticator)
                    {
                        <a asp-page="./EnableAuthenticator" class="btn btn-success">Add authenticator app</a>
                    }
                    else
                    {
                        <a asp-page="./EnableAuthenticator" class="btn btn-secondary me-2">Set up app</a>
                        <a asp-page="./ResetAuthenticator" class="btn btn-danger">Reset app</a>
                    }
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>Cookie policy not accepted.</strong> Please accept it to enable 2FA.
                    </div>
                }
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
