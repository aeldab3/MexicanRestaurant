@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-4">
    <h1 class ="text-center text-success mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="account" method="post" class="p-4 shadow-lg rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="eldab3@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-bold">Password</label>
                    <div class="position-relative">
                        <input asp-for="Input.Password" class="form-control pe-5" id="passwordInput" type="password" aria-required="true" placeholder="password" />
                        <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3" id="toggleIcon" style="cursor: pointer;" onclick="togglePassword()"></i>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-grid">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-success">Login</button>
                </div>
                <div class="mt-3 d-flex flex-wrap justify-content-between gap-2">
                    <a asp-page="./ForgotPassword" class="btn btn-outline-secondary btn-sm">Forgot Password?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary btn-sm">Register</a>
                    <a asp-page="./ResendEmailConfirmation" class="btn btn-outline-warning btn-sm">Resend Email</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');
            const isPassword = input.type === 'password';

            input.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        }
    </script>
}
