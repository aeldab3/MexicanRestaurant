@model IEnumerable<AuditLog>
@{
    ViewData["Title"] = "Audit Log";
    ViewData["MetaDescription"] = "View the audit log for the Mexican Restaurant application, tracking changes and actions performed by users.";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Audit Log</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-bordered table-striped table-hover align-middle">
                        <thead class="table-success">
                            <tr>
                                <th>User Id</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Action</th>
                                <th>Entity</th>
                                <th>Entity Id</th>
                                <th>Details</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No audit logs available.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var log in Model)
                                {
                                    <tr>
                                        <td>@log.UserId</td>
                                        <td>@log.Email</td>
                                        <td>@log.Role</td>
                                        <td>@log.ActionType</td>
                                        <td>@log.EntityName</td>
                                        <td>@log.EntityId</td>
                                        <td>@log.Details</td>
                                        <td>@log.Timestamp.ToString("g")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>