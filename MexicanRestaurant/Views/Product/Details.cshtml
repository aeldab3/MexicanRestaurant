@model MexicanRestaurant.WebUI.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Product Details";
    ViewData["MetaDescription"] = "Get detailed information about this Mexican dish, including ingredients, description, and pricing.";
}

<div class="container my-4" aria-labelledby="productDetailsHeading">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/images/" + Model.ImageUrl)"
                 class="img-fluid mt-2 rounded shadow" alt="Image of @Model.Name"
                 style="max-height: 400px; object-fit: cover;" width="500" height="400" />
        </div>
        <div class="col-md-6">
            <h2 class="text-success mt-2 fw-bold" id="productDetailsHeading">@Model.Name</h2>
            <h3 class="text-secondary" aria-label="Category">@Model.CategoryName</h3>
            <h4 class="text-muted" aria-label="Price">@Model.Price.ToString("C")</h4>
            <p class="mt-3" aria-label="Description">@Model.Description</p>
            <a asp-action="Create" asp-controller="Order" class="btn btn-success" aria-label="Back to Products">Back to Products</a>
        </div>
    </div>
</div>
