@model MexicanRestaurant.WebUI.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Product Details";
    ViewData["MetaDescription"] = "Get detailed information about this Mexican dish, including ingredients, description, and pricing.";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/images/" + Model.ImageUrl)"
                 class="img-fluid mt-2 rounded shadow" alt="@Model.Name image"
                 style="max-height: 400px; object-fit: cover;" />
        </div>
        <div class="col-md-6">
            <h2 class="text-success mt-2 fw-bold">@Model.Name</h2>
            <h3 class="text-secondary">@Model.CategoryName</h3>
            <h4 class="text-muted">@Model.Price.ToString("C")</h4>
            <p class="mt-3">@Model.Description</p>
            <a asp-action="Create" asp-controller="Order" class="btn btn-success">Back to Products</a>
        </div>
    </div>
</div>
