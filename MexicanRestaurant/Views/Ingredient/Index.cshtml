@model IEnumerable<MexicanRestaurant.Core.Models.Ingredient>
@{
    ViewData["Title"] = "Ingredients";
}

<h1>Ingredients</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Details</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model)
        {
            <tr>
                <td>@ingredient.Name</td>
                 <td>
                    <a asp-action="Details" asp-route-id="@ingredient.IngredientId" class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ingredient.IngredientId" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@ingredient.IngredientId" class="btn btn-danger">Delete</a>
                </td> 
            </tr>
        }
    </tbody>
</table>
