@model MexicanRestaurant.Core.Models.Ingredient
@{
    ViewData["Title"] = "Ingredient Details";
}

<h1>@ViewData["Title"]</h1>
<h3 class="card-title">@Model.Name Details</h3>
@if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
{
    <h4>Products</h4>
    <table class="table table-bordered">
        <thead class="table-striped">
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productIngredient in Model.ProductIngredients)
            {
                <tr>
                    <td>@productIngredient.Product.Name</td>
                    <td>@productIngredient.Product.Description</td>
                    <td>@productIngredient.Product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index" class="btn btn-secondary">Return</a>
</div>

