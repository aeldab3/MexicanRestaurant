@using MexicanRestaurant.WebUI.ViewModels
@model OrderViewModel

<div class="table-responsive" role="region" aria-label="User order cart table">
    <table class="table align-middle table-hover">
        <thead class="table-success">
            <tr class="text-center">
                <th scope="col" style="width: 40%">Product</th>
                <th scope="col" style="width: 20%">Quantity</th>
                <th scope="col" style="width: 20%">Unit Price</th>
                <th scope="col" style="width: 20%">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                var fullProduct = Model.Products.FirstOrDefault(p => p.ProductId == item.ProductId);
                var outOfStock = fullProduct != null && fullProduct.Stock == 0;
                <tr>
                    <td>
                        <figure class="d-flex align-items-center gap-3 m-0">
                            <img src="@Url.Content("~/images/" + item.Product.ImageUrl)" alt="Image of @item.Product.Name" class="cart-img" width="64" height="64" />
                            <figcaption class="fw-semibold text-dark">@item.Product.Name</figcaption>
                        </figure>
                    </td>

                    <td>
                        <div class="d-flex justify-content-center align-items-center gap-2" role="group" aria-label="Change quantity of @item.Product.Name">
                            <button type="button" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center justify-content-center btn-decrease" 
                                    style="width: 32px; height: 32px;" data-product-id="@item.ProductId" data-quantity="@item.Quantity" aria-label="Decrease quantity or Remove @item.Product.Name" >
                                @Html.Raw(item.Quantity > 1 ? "-" : "<i class='bi bi-trash' aria-hidden='true'></i>")
                            </button>

                            <span class="item-qty" data-product-id="@item.ProductId" aria-live="polite">@item.Quantity</span>

                            <button type="button" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center justify-content-center btn-increase"
                                    style="width: 32px; height: 32px;" data-product-id="@item.ProductId" data-stock="@fullProduct?.Stock ?? 0" aria-label="Increase quantity of @item.Product.Name"
                                    @(outOfStock? "disabled" : "")>+
                            </button>
                        </div>
                    </td>

                    <td class="text-center">@item.Price.ToString("C")</td>

                    <td class="text-center" data-product-id="@item.ProductId">
                        @((item.Price * item.Quantity).ToString("C"))
                    </td>
                </tr>
            }

            <tr class="table-success fw-bold">
                <td colspan="3" class="text-end" scope="row">Total:</td>
                <td class="text-end fw-bold" id="order-total" aria-label="Total order amount">@Model.TotalAmount.ToString("C")</td>
            </tr>
        </tbody>
    </table>
</div>
