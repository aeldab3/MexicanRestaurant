@{
    ViewData["Title"] = "Checkout Cancel";
}

<div class="container my-4 d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
    <h1 class="text-danger mb-4 fw-bold">Checkout Cancelled</h1>
    <p class="text-muted mb-4">Your checkout has been cancelled. You can continue shopping or view your cart.</p>
    <a href="@Url.Action("Cart", "Order")" class="btn btn-warning">
        <i class="bi bi-cart-fill"></i> View Cart
    </a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-2">
        <i class="bi bi-arrow-left-circle-fill"></i> Back to Home
    </a>
</div>