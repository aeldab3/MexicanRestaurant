@{
    ViewData["Title"] = "Checkout Success";
    ViewData["MetaDescription"] = "Thank you for your order. Your order has been placed successfully and is being processed.";
}

<section class="container my-5 py-5 d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 75vh;">
    <div class="card shadow-lg border-0 p-4 w-100" style="max-width: 600px; background-color: #f9f5d9">
        <div class="card-body">
            <h1 class="text-success fw-bold mb-3" role="heading" aria-level="1">
                ✅ Order Placed Successfully!
            </h1>
            <p class="text-muted fs-5 mb-4" aria-live="polite">
                Thank you for your order. Your order has been successfully placed and is now being processed.
            </p>
            <div class="d-grid gap-3">
                <a href="@Url.Action("ViewOrders", "Order")" class="btn btn-success btn-lg" role="button" aria-label="View your orders">
                    <i class="bi bi-bag-check-fill me-2" aria-hidden="true"></i> Show My Orders
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg" role="button" aria-label="Go back to home page">
                    <i class="bi bi-house-door-fill me-2" aria-hidden="true"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</section>