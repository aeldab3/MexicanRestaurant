@{
    ViewData["Title"] = "Checkout Success";
}
<div class="container my-4 d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
    <h1 class="text-success mb-4 fw-bold">Order Placed Successfully!</h1>
    <p class="text-muted mb-4">Thank you for your order. Your order has been successfully placed and is being processed.</p>
    <a href="@Url.Action("ViewOrders", "Order")" class="btn btn-success">
