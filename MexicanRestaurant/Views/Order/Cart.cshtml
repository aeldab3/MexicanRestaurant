@using MexicanRestaurant.WebUI.ViewModels
@model OrderViewModel
@{
    ViewData["MetaDescription"] = "View your cart with selected Mexican dishes. Adjust quantities or proceed to checkout.";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="fw-bold mb-0">🛒 My Cart</h2>
                    <p class="fw-light mb-0">Review your order before placing it</p>
                </div>

                <div class="card-body">
                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        <form asp-action="PlaceOrder" method="post">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center gap-3">
                                                        <img src="~/images/@item.ImageUrl" class="cart-img" />
                                                        <span class="fw-semibold">@item.ProductName</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center gap-2">
                                                        @if (item.Quantity > 1)
                                                        {
                                                            <button type="submit" formaction="/Order/Decrease?productId=@item.ProductId" class="qty-btn">−</button>
                                                        }
                                                        else
                                                        {
                                                            <button type="submit" formaction="/Order/Remove?productId=@item.ProductId" class="qty-btn">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        }
                                                        <span>@item.Quantity</span>
                                                        <button type="submit" formaction="/Order/Increase?productId=@item.ProductId" class="qty-btn">+</button>
                                                    </div>
                                                </td>
                                                <td>@item.Price.ToString("C")</td>
                                                <td>@((item.Price* item.Quantity).ToString("C"))</td>
                                            </tr>
                                        }

                                        <tr class="table-success fw-bold">
                                            <td colspan="3" class="text-end">Total:</td>
                                            <td class="text-end fw-bold">@Model.TotalAmount.ToString("C")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="text-end mt-4 d-flex justify-content-between">
                                <a asp-action="Create" class="btn btn-lg btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Products
                                </a>
                                <input type="submit" value="Place Order" class="btn btn-lg btn-success px-5 shadow-sm" />
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted text-center">🛒 Your cart is currently empty.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cart-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .qty-btn {
        border: none;
        background-color: #eee;
        width: 32px;
        height: 32px;
        font-weight: bold;
        border-radius: 6px;
        transition: 0.3s;
    }

        .qty-btn:hover {
            background-color: #ccc;
        }
</style>