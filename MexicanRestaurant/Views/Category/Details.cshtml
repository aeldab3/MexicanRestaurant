@model Category
@{
    ViewData["Title"] = "Categories";
    ViewData["MetaDescription"] = "Explore our delicious Mexican food categories, from tacos to enchiladas. Find your favorite dishes easily.";
}


<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="fw-bold mb-0" aria-label="Category Details: @Model.Name">@Model.Name</h2>
                    <p class="fw-light mb-0">Contains these products</p>
                </div>
                <div class="card-body">
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <caption class="visually-hidden">List of Products in the Category</caption>
                                <thead class="table-success">
                                    <tr>
                                        <th style="width: 20%;">Product Name</th>
                                        <th>Description</th>
                                        <th style="width: 10%;">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model.Products)
                                    {
                                        <tr onclick="location.href='@Url.Action("Details", "Product", new { id = p.ProductId })'" style="cursor: pointer;">
                                            <td scope="row" class="fw-semibold text-nowrap">@Html.DisplayFor(m => p.Name)</td>
                                            <td>
                                                @p.Description@Html.DisplayFor(m => p.Description)
                                            </td>
                                            <td>@p.Price.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No Products in this Category.</p>
                    }
                </div>
                <div class="card-footer bg-white border-top-0 text-start">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Return
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
