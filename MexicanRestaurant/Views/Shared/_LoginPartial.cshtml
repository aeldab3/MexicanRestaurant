@using MexicanRestaurant.Core.Extensions
@using MexicanRestaurant.Core.Interfaces
@using MexicanRestaurant.Core.Models
@using MexicanRestaurant.WebUI.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ISessionService _sessionService
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-2">
        <a class="nav-link position-relative" asp-area="" asp-action="Cart" asp-controller="Order">
            <span id="cart-icon-container">
                    @await Html.PartialAsync("_CartIconPartial", _sessionService.Get<OrderViewModel>("OrderViewModel") ?? new OrderViewModel())
            </span>
        </a>
    </li>
    <li class="nav-item">
        @{
            var currentUser = await UserManager.GetUserAsync(User);
        }
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @currentUser?.FirstName</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
