<!DOCTYPE html>  
<html lang="en">  
    <head>  
        <meta charset="utf-8" />  
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
        <title>@ViewData["Title"] - MexicanRestaurant</title>  
        @if (ViewData["MetaDescription"] != null)
        {
            <meta name="description" content="@ViewData["MetaDescription"]" />
        }
        else
        {
            <meta name="description" content="Your default description for pages without a specific one." />
        }
        <script type="importmap"></script>  
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  
        <link rel="stylesheet" href="~/MexicanRestaurant.styles.css" asp-append-version="true" />  
        <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">  
        <link rel="icon" type="image/png" href="~/images/Logo-AE.png" />  
        <link rel="preload" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    </head>  
    <body class="d-flex flex-column min-vh-100" style="background-color:#f9f5d9">
        @{
            var currentArea = Context.GetRouteValue("area")?.ToString();
            var showSidebar = currentArea == "Admin";
            var isProduct = ViewContext.RouteData.Values["controller"]?.ToString() == "Product";
            var isIngredient = ViewContext.RouteData.Values["controller"]?.ToString() == "Ingredient";
            var showAdminSidebar = (User.IsInRole("Admin") || User.IsInRole("Manager")) && (showSidebar || isProduct || isIngredient);
        }
        <header>  
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color:#f9f5d9">
                <div class="container-fluid"> 
                    <a class="navbar-brand text-success" asp-area="" asp-controller="Home" asp-action="Index">  
                        <img src="~/images/Logo-AE.png" alt="Logo" style="height: 25px; margin:0" />  
                        <strong>Mexican Restaurant</strong>
                    </a>  
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"  aria-controls="navbarSupportedContent"  
                    aria-expanded="false" aria-label="Toggle navigation">  
                        <span class="navbar-toggler-icon"></span>  
                    </button>  
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">  
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <li class="nav-item d-lg-block d-none">  
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                                </li>
    
                                <li class="nav-item dropdown d-lg-none">
                                    <span class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" style="cursor:pointer">Admin Panel</span>
                                    <ul class="dropdown-menu" style="background-color:#f9f5d9;">
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">User Management</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="OrderManagement" asp-action="Index">Order Management</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="AuditLog" asp-action="Index">Audit Logs</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Product" asp-action="Index">Manage Products</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Ingredient" asp-action="Index">Manage Ingredients</a></li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item">  
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">  
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Create">Create Order</a>  
                            </li>  
                        </ul>  
                        <partial name="_LoginPartial" />  
                    </div>  
                </div>  
            </nav>  
        </header>
        <div class="d-flex flex-grow-1">
            @if (showAdminSidebar)
            {
                <partial name="_AdminSidebar" />
            }
            <div class="container">
                <main role="main">
                    @RenderBody()  
                </main>
            </div>
        </div>
        @if (!showAdminSidebar)
        {
            <footer class="footer text-muted">
                <div class="container-fluid text-dark">  
                    &copy; 2025 - Mexican Restaurant - Ahmed Eldab3
                </div>  
            </footer>
        }
        <script src="~/lib/jquery/dist/jquery.min.js"></script>  
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
        <script src="~/js/site.js" asp-append-version="true"></script>  
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        @await RenderSectionAsync("Scripts", required: false)  
    </body>  
</html>

<script>
    window.showToast = function (message, icon = 'success') {
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: icon,
            title: message,
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true
        });
    };
     @if (TempData["Success"] != null)
     {
        <text>
            window.addEventListener('DOMContentLoaded', () => {
                showToast('@TempData["Success"]');
            });
        </text>
     }
     @if (TempData["ErrorMessage"] != null)
     {
        <text>
            window.addEventListener('DOMContentLoaded', () => {
                    showToast('@TempData["ErrorMessage"]', 'error');
            });
        </text>
     }
</script>
<style>
    .dropdown-menu .dropdown-item:hover{
        background-color: #198754 !important;
        color: white !important;
    }
</style>