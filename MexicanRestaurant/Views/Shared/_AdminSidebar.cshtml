@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    <aside class="admin-sidebar d-none d-lg-block">
        <div class="text-center d-flex justify-content-center align-items-center my-4">
            <img src="~/images/logo-AE.webp" style="width: 60px; height: auto;" alt="icon image" width="60" />
        </div>
        <h2 class="text-white text-center mb-4">Admin Panel</h2>
        <nav class="nav flex-column px-3 text-center" aria-label="Admin Sidebar Navigation">
            <a class="nav-link admin-link @(currentController == "Dashboard" ? "active-admin-link" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a>
            <a class="nav-link admin-link @(currentController == "User" ? "active-admin-link" : "")" asp-area="Admin" asp-controller="User" asp-action="Index">👥 User Management</a>
            <a class="nav-link admin-link @(currentController == "OrderManagement" ? "active-admin-link" : "")" asp-area="Admin" asp-controller="OrderManagement" asp-action="Index">🧾 Order Management</a>
            <a class="nav-link admin-link @(currentController == "AuditLog" ? "active-admin-link" : "")" asp-area="Admin" asp-controller="AuditLog" asp-action="Index">📋 Audit Logs</a>
            <a class="nav-link admin-link @(currentController == "Product" ? "active-admin-link" : "")" asp-area="" asp-controller="Product" asp-action="Index">🌮 Products</a>
            <a class="nav-link admin-link @(currentController == "Ingredient" ? "active-admin-link" : "")" asp-area="" asp-controller="Ingredient" asp-action="Index">🌶️ Ingredients</a>
        </nav>
    </aside>
}

<style> 
    .admin-sidebar {
        width: 250px;
        min-height: 100%;
        background-color: #198754;
        position: relative;
        top: 0;
        flex-shrink: 0;
        z-index: 1;
        padding-top: 1rem;
    }

    .admin-link {
        color: #ffffff;
        font-weight: 600;
        padding: 0.75rem 1rem;
        margin: 0.25rem 0;
        border-radius: 0.5rem;
        transition: background-color 0.2s ease;
        font-size: 1rem;
    }

    .admin-link:hover {
        background-color: #145c3d;
        text-decoration: none;
        color: #fff;
    }

    .active-admin-link {
        background-color: #0e3e2a;
        border-left: 4px solid #ffc107;
    }

</style>