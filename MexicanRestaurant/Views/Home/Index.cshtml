@{
    ViewData["Title"] = "Welcome to Mexican Restaurant";
    ViewData["MetaDescription"] = "Discover the authentic taste of Mexico at our restaurant. Order delicious tacos, burritos, and more";

}

<main>
    <section class="full-width-home">
        <div class="home-content">
            <h1>Authentic Mexican Taste</h1>
            <p>Order your favorite tacos, burritos, and more!</p>
            <a asp-controller="Order" asp-action="Create" class="btn btn-lg btn-warning">Explore Menu</a>
        </div>
    </section>
</main>

<style>
    .full-width-home {
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        width: 100vw;
        background-image: url('/images/mexicanResturant.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 88vh;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .full-width-home .home-content {
        z-index: 2;
        color: white;
        text-align: center;
        text-shadow: 1px 1px 10px #000;
    }

    .full-width-home h1 {
        font-size: 4rem;
    }

    .full-width-home p {
        font-size: 1.5rem;
    }

    .full-width-home .btn {
        margin-top: 5rem;
    }

    .section {
        padding: 4rem 2rem;
        text-align: center;
    }
</style>